<?xml version="1.0" encoding="utf-8"?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:prism="clr-namespace:Prism.DryIoc;assembly=Prism.DryIoc.Forms"
                 x:Class="TravelExpenses.Prism.App">

    <Application.Resources>
        <ResourceDictionary>

            <!-- Parameters -->
            <x:String x:Key="UrlAPI">https://travelexpensesweb.azurewebsites.net/</x:String>
            <x:String x:Key="UrlNoImage">https://travelexpensesweb.azurewebsites.net/images/noimage.png</x:String>

            <Color x:Key="ColorBackgroud">#FFFFFF</Color>
            <Color x:Key="ColorSecondary">#A6ABAB</Color>

            <!--Global Styles-->
            <Color x:Key="NavigationPrimary">#FCA741</Color>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource NavigationPrimary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>

            <Color x:Key="primary">#3ec3d5</Color>

        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
