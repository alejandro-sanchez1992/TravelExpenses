@model TravelExpenses.Web.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-login100" style="background-image: url('/assets/img/bg-01.jpg');">
    <div class="wrap-login100 p-l-55 p-r-55 p-t-100 p-b-100">

        <form method="post" class="login100-form validate-form">
            <span class="login100-form-title p-b-37">
                Login
            </span>

            <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username or email">
                <input asp-for="Username" class="input100" type="email" name="username" placeholder="username or email" required>
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-25 text-center">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
                <input asp-for="Password" class="input100" type="password" name="Password" placeholder="password" required>
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-25 text-center">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="wrap-input100 validate-input m-b-25 p-l-10">
                <div class="form-check">
                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>

            <div class="container-login100-form-btn">
                <button class="login100-form-btn">
                    Sign In
                </button>
            </div>

        </form>

    </div>
</div>