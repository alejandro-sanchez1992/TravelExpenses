@model TravelExpenses.Web.Data.Entities.TripEntity

@{
    ViewData["Title"] = "Trip Details";
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Trips @Html.DisplayFor(model => model.Id)</h2>
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-lg-12">
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().PicturePath)</th>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().Expense.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().Amount)</th>
                                    <th>@Html.DisplayNameFor(model => model.TripDetails.FirstOrDefault().DateLocal)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TripDetails)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.PicturePath))
                                            {
                                                <img src="@Url.Content(item.PicturePath)" alt="Image" style="width:300px;height:300px;max-height: 100%; width: auto;" />
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Expense.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>$@string.Format("{0:C}", item.Amount).Substring(1)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateLocal)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <partial name="Layout/_Copyright" />
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END MAIN CONTENT-->
